diff -urNad lapack-3.5.0-orig/SRC/Makefile lapack-3.5.0/SRC/Makefile
--- lapack-3.5.0-orig/SRC/Makefile	2013-07-09 07:06:39.000000000 +0300
+++ lapack-3.5.0/SRC/Makefile	2014-03-10 14:23:38.000000000 +0200
@@ -421,11 +421,10 @@
 ALLXOBJ = $(SXLASRC) $(DXLASRC) $(CXLASRC) $(ZXLASRC)
 endif
 
-all: ../$(LAPACKLIB)
+all: $(LAPACKLIB)
 
-../$(LAPACKLIB): $(ALLOBJ) $(ALLXOBJ)
-	$(ARCH) $(ARCHFLAGS) $@ $(ALLOBJ) $(ALLXOBJ)
-	$(RANLIB) $@
+$(LAPACKLIB): $(ALLOBJ) $(ALLXOBJ)
+	$(FORTRAN) -shared -Wl,-soname=$@ -o $@ $(ALLOBJ) $(ALLXOBJ) $(BLASLIB)
 
 single: $(SLASRC) $(DSLASRC) $(SXLASRC) $(SCLAUX) $(ALLAUX)
 	$(ARCH) $(ARCHFLAGS) ../$(LAPACKLIB) $(SLASRC) $(DSLASRC) \
@@ -467,7 +466,7 @@
 	@FRC=$(FRC)
 
 clean:
-	rm -f *.o
+	rm -f *.o *.so.*
 
 .f.o: 
 	$(FORTRAN) $(OPTS) -c $< -o $@
