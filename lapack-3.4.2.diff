diff -urNad lapack-3.4.2-orig/SRC/Makefile lapack-3.4.2/SRC/Makefile
--- lapack-3.4.2-orig/SRC/Makefile	2012-04-02 22:06:36.000000000 +0300
+++ lapack-3.4.2/SRC/Makefile	2014-03-09 21:46:12.000000000 +0200
@@ -405,11 +405,10 @@
 ALLXOBJ = $(SXLASRC) $(DXLASRC) $(CXLASRC) $(ZXLASRC)
 endif
 
-all: ../$(LAPACKLIB)
+all: $(LAPACKLIB)
 
-../$(LAPACKLIB): $(ALLOBJ) $(ALLXOBJ)
-	$(ARCH) $(ARCHFLAGS) $@ $(ALLOBJ) $(ALLXOBJ)
-	$(RANLIB) $@
+$(LAPACKLIB): $(ALLOBJ) $(ALLXOBJ)
+	$(FORTRAN) -shared -Wl,-soname=$@ -o $@ $(ALLOBJ) $(ALLXOBJ) $(BLASLIB)
 
 single: $(SLASRC) $(DSLASRC) $(SXLASRC) $(SCLAUX) $(ALLAUX)
 	$(ARCH) $(ARCHFLAGS) ../$(LAPACKLIB) $(SLASRC) $(DSLASRC) \
@@ -451,7 +450,7 @@
 	@FRC=$(FRC)
 
 clean:
-	rm -f *.o
+	rm -f *.o *.so.*
 
 .f.o: 
 	$(FORTRAN) $(OPTS) -c $< -o $@
--- lapack-3.4.2-orig/make.inc.example	2012-04-13 21:13:07.000000000 +0300
+++ lapack-3.4.2/make.inc.example	2014-03-09 21:58:35.000000000 +0200
@@ -3,6 +3,11 @@
 #  LAPACK, Version 3.4.0                                           #
 #  April 2012                                                   #
 ####################################################################
+
+VER_MAJ = 3
+VER_MIN = 4
+VER_PATCH = 2
+
 #
 SHELL = /bin/sh
 #  
@@ -13,9 +18,9 @@
 #  desired load options for your machine.
 #
 FORTRAN  = gfortran 
-OPTS     = -O2
+OPTS     = $(FFLAGS) -O2 -mieee-fp -fPIC
 DRVOPTS  = $(OPTS)
-NOOPT    = -O0
+NOOPT    = $(FFLAGS) -O0 -mieee-fp -ffloat-store -fPIC
 LOADER   = gfortran
 LOADOPTS =
 #
@@ -65,7 +70,8 @@
 #  machine-specific, optimized BLAS library should be used whenever
 #  possible.)
 #
-BLASLIB      = ../../librefblas.a
-LAPACKLIB    = liblapack.a
+BLASLIB      = -lblas
+LAPACKLIB    = liblapack.so.$(VER_MAJ).$(VER_MIN).$(VER_PATCH)
 TMGLIB       = libtmglib.a
-LAPACKELIB   = liblapacke.a
+LAPACKELIB   = liblapacke.so.$(VER_MAJ).$(VER_MIN).$(VER_PATCH)
+
